<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.sf.egonet.model.QuestionOption" table="question_option">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="randomKey" column="random_key" />
		<property name="active" column="active" />

		<property name="studyId" column="study_id" />
		<property name="questionId" column="question_id" />
		<property name="name" column="name" />
		<property name="value" column="value" />
		<property name="ordering" column="ordering" />
	</class>
</hibernate-mapping>
